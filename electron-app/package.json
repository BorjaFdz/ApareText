{
  "name": "aparetext-desktop",
  "version": "1.0.0",
  "description": "ApareText - Text Expander Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "text-expander",
    "snippets",
    "productivity"
  ],
  "author": "Borja Fernández",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "chart.js": "^4.5.0",
    "fuse.js": "^7.1.0",
    "node-key-sender": "^1.0.11"
  },
  "build": {
    "appId": "com.aparetext.desktop",
    "productName": "ApareText",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!dist",
      "!build",
      "!**/*.ts",
      "!**/.git*"
    ],
    "asar": false,
    "extraResources": [
      {
        "from": "../dist/ApareText-Server.exe",
        "to": "ApareText-Server.exe"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "Borja Fernández",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    }
  }
}
