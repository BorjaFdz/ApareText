{
  "name": "aparetext-desktop",
  "version": "1.0.0",
  "description": "ApareText - Text Expander Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "prebuild": "powershell -ExecutionPolicy Bypass -File scripts/before-build.ps1 && npm run clean && node scripts/before-build.js",
    "build": "electron-builder",
    "build:win": "npm run prebuild && cross-env ELECTRON_BUILDER_DISABLE_SANDBOX=true CSC_IDENTITY_AUTO_DISCOVERY=false WIN_CSC_LINK= WIN_CSC_KEY_PASSWORD= powershell -ExecutionPolicy Bypass -File scripts/before-build.ps1 && electron-builder --win --config electron-builder.json --publish=never && npm run postbuild",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:linux": "npm run prebuild && electron-builder --linux",
    "clean": "rimraf dist && rimraf build",
    "postbuild": "powershell -ExecutionPolicy Bypass -File scripts/after-build.ps1",
    "lint": "echo 'No linter configured yet'",
    "format": "echo 'No formatter configured yet'",
    "test": "echo 'No tests configured yet'"
  },
  "keywords": [
    "text-expander",
    "snippets",
    "productivity"
  ],
  "author": "Borja Fernández",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "chart.js": "^4.5.0",
    "fuse.js": "^7.1.0",
    "node-key-sender": "^1.0.11"
  },
  "build": {
    "appId": "com.aparetext.desktop",
    "productName": "ApareText",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!dist",
      "!build",
      "!**/*.ts",
      "!**/.git*"
    ],
    "asar": false,
    "beforeBuild": "scripts/before-build.js",
    "extraResources": [
      {
        "from": "../dist/ApareText-Server.exe",
        "to": "ApareText-Server.exe"
      }
    ],
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false,
      "runAfterFinish": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "Borja Fernández",
      "verifyUpdateCodeSignature": false,
      "deleteAppDataOnUninstall": true,
      "sign": false,
      "certificateFile": null,
      "certificatePassword": null
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    }
  }
}
