{
  "appId": "com.aparetext.desktop",
  "productName": "ApareText",
  "directories": {
    "output": "output",
    "buildResources": "build",
    "app": "."
  },
  "files": [
    "**/*",
    "!dist",
    "!build",
    "!**/*.ts",
    "!**/.git*",
    "!scripts",
    "!*.md",
    "!package-lock.json",
    "../core/**"
  ],
  "asar": true,
  "beforeBuild": "scripts/before-build.js",
  "nsis": {
    "allowToChangeInstallationDirectory": true,
    "oneClick": false,
    "perMachine": false,
    "runAfterFinish": false,
    "include": null,
    "script": null
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "publisherName": "Borja Fern√°ndez",
    "verifyUpdateCodeSignature": false
  },
  "mac": {
    "target": [
      "dmg",
      "zip"
    ],
    "icon": "assets/icon.icns"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "icon": "assets/icon.png"
  },
  "publish": null,
  "compression": "maximum",
  "npmRebuild": false,
  "buildDependenciesFromSource": false,
  "nodeGypRebuild": false
}