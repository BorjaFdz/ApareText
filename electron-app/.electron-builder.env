# Configuración de entorno para electron-builder
# Deshabilitar verificaciones que puedan causar esperas

# Deshabilitar verificación de actualizaciones
ELECTRON_BUILDER_DISABLE_SANDBOX=true

# Deshabilitar verificación de firma de código
CSC_IDENTITY_AUTO_DISCOVERY=false
WIN_CSC_LINK=
WIN_CSC_KEY_PASSWORD=

# Configuración para builds más rápidos y menos restrictivos
ELECTRON_BUILDER_COMPRESSION_LEVEL=6
USE_HARD_LINKS=false

# Deshabilitar algunas verificaciones de seguridad que pueden causar esperas
ELECTRON_SKIP_BINARY_DOWNLOAD=false
npm_config_electron_mirror=https://registry.npmmirror.com/-/binary/electron/

# Configuración específica para Windows
WIN_BUILD_ZIP=false